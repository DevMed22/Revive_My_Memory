<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewRevive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0000A5</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0000A5</item>
        <item name="colorSecondaryVariant">#0000A5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonWhite">
        <item name="android:background">#0000A5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="buttonGrey">
        <item name="background">@drawable/bg_button</item>
        <item name="backgroundTint">#4E4D4D</item>
        <item name="android:enabled">false</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="textlayout" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="android:textColorHint">#8E8D8D</item>
        <item name="hintTextColor">#8E8D8D</item>
        <item name="startIconTint">#0000A5</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <!--header background-->
        <item name="colorAccent">#0000A5</item>
        <!--header textcolor-->
        <item name="android:textColorPrimaryInverse">#0000A5</item>
        <!--body background-->
        <item name="android:windowBackground">#0000A5</item>
        <!--selected day-->
        <item name="android:colorControlActivated">#0000A5</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">#0000A5</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">#0000A5</item>
        <!--cancel&ok-->
        <item name="android:textColor">#0000A5</item>
    </style>


</resources>